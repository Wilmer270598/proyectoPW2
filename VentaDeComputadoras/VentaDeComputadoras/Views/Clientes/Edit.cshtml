@model VentaDeComputadoras.Models.Cliente

@{
    ViewData["Title"] = "Editar Cliente";
}

<h1 class="text-light">Editar Cliente</h1>

<h4 class="text-secondary">Información del Cliente</h4>
<hr class="bg-secondary" />

<div class="row">
    <div class="col-md-6">
        <form asp-action="Edit">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="id_cliente" />

            <div class="form-group">
                <label asp-for="nombre" class="control-label text-light"></label>
                <input asp-for="nombre" class="form-control bg-dark text-light" />
                <span asp-validation-for="nombre" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="apellido" class="control-label text-light"></label>
                <input asp-for="apellido" class="form-control bg-dark text-light" />
                <span asp-validation-for="apellido" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="telefono" class="control-label text-light"></label>
                <input asp-for="telefono" class="form-control bg-dark text-light" />
                <span asp-validation-for="telefono" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="correo" class="control-label text-light"></label>
                <input asp-for="correo" class="form-control bg-dark text-light" />
                <span asp-validation-for="correo" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="calle" class="control-label text-light"></label>
                <input asp-for="calle" class="form-control bg-dark text-light" />
                <span asp-validation-for="calle" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="codigoPostal" class="control-label text-light"></label>
                <input asp-for="codigoPostal" class="form-control bg-dark text-light" />
                <span asp-validation-for="codigoPostal" class="text-danger"></span>
            </div>

            <div class="form-group mt-3">
                <input type="submit" value="Guardar Cambios" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-secondary ml-2">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
