@model VentaDeComputadoras.Models.Cliente

@{
    ViewData["Title"] = "Crear Cliente";
}

<h1 class="text-center mt-4 text-light  ">Crear Cliente</h1>

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card bg-dark text-light shadow-lg">
                <div class="card-header text-center">
                    <h4>Detalles del Cliente</h4>
                </div>
                <div class="card-body">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                        <div class="mb-3">
                            <label asp-for="nombre" class="form-label"></label>
                            <input asp-for="nombre" class="form-control bg-secondary text-light border-0" />
                            <span asp-validation-for="nombre" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="apellido" class="form-label"></label>
                            <input asp-for="apellido" class="form-control bg-secondary text-light border-0" />
                            <span asp-validation-for="apellido" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="telefono" class="form-label"></label>
                            <input asp-for="telefono" class="form-control bg-secondary text-light border-0" />
                            <span asp-validation-for="telefono" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="correo" class="form-label"></label>
                            <input asp-for="correo" class="form-control bg-secondary text-light border-0" />
                            <span asp-validation-for="correo" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="calle" class="form-label"></label>
                            <input asp-for="calle" class="form-control bg-secondary text-light border-0" />
                            <span asp-validation-for="calle" class="text-danger"></span>
                        </div>

                        <div class="mb-3">
                            <label asp-for="codigoPostal" class="form-label"></label>
                            <input asp-for="codigoPostal" class="form-control bg-secondary text-light border-0" />
                            <span asp-validation-for="codigoPostal" class="text-danger"></span>
                        </div>

                        <div class="d-grid mt-4">
                            <button type="submit" class="btn btn-primary">Crear</button>
                        </div>
                    </form>
                </div>
                <div class="card-footer text-center">
                    <a asp-action="Index" class="btn btn-link text-decoration-none text-light">Volver a la lista</a>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
