@model VentaDeComputadoras.Models.Producto

@{
    ViewData["Title"] = "Detalles del Producto";
}

<h1 class="text-light">Detalles del Producto</h1>

<div class="bg-dark p-4 rounded shadow">
    <h4 class="text-secondary">Información del Producto</h4>
    <hr class="border-secondary" />

    <dl class="row text-light">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NombreProducto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.estadoProducto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.estadoProducto)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.precio)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.marca)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.marca)
        </dd>
    </dl>
</div>

<div class="mt-3">
    <a asp-action="Edit" asp-route-id="@Model?.id_producto" class="btn btn-warning me-2">Editar</a>
    <a asp-action="Index" class="btn btn-outline-light">Volver a la Lista</a>
</div>
