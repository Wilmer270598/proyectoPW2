@model VentaDeComputadoras.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<h1 class="text-light">Crear Producto</h1>

<h4 class="text-secondary">Información del Producto</h4>
<hr class="border-secondary" />

<div class="row justify-content-center">
    <div class="col-md-6">
        <form asp-action="Create" class="bg-dark p-4 rounded shadow">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="mb-3">
                <label asp-for="NombreProducto" class="form-label text-light"></label>
                <input asp-for="NombreProducto" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="NombreProducto" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="descripcion" class="form-label text-light"></label>
                <input asp-for="descripcion" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="descripcion" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="estadoProducto" class="form-label text-light"></label>
                <input asp-for="estadoProducto" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="estadoProducto" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="precio" class="form-label text-light"></label>
                <input asp-for="precio" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="precio" class="text-danger"></span>
            </div>

            <div class="mb-3">
                <label asp-for="marca" class="form-label text-light"></label>
                <input asp-for="marca" class="form-control bg-dark text-light border-secondary" />
                <span asp-validation-for="marca" class="text-danger"></span>
            </div>

            <div class="d-flex justify-content-between">
                <input type="submit" value="Crear" class="btn btn-success" />
                <a asp-action="Index" class="btn btn-outline-light">Volver a la Lista</a>
            </div>
        </form>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
