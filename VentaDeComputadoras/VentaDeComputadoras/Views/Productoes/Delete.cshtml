@model VentaDeComputadoras.Models.Producto

@{
    ViewData["Title"] = "Eliminar Producto";
}

<h1 class="text-light">Eliminar Producto</h1>

<h3 class="text-warning">¿Estás seguro de que deseas eliminar este producto?</h3>
<div class="bg-dark p-4 rounded shadow">
    <h4 class="text-secondary">Detalles del Producto</h4>
    <hr class="border-secondary" />

    <dl class="row text-light">
        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.NombreProducto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.NombreProducto)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.descripcion)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.descripcion)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.estadoProducto)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.estadoProducto)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.precio)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.precio)
        </dd>

        <dt class="col-sm-3">
            @Html.DisplayNameFor(model => model.marca)
        </dt>
        <dd class="col-sm-9">
            @Html.DisplayFor(model => model.marca)
        </dd>
    </dl>

    <form asp-action="Delete" class="mt-3">
        <input type="hidden" asp-for="id_producto" />
        <div class="d-flex justify-content-start">
            <input type="submit" value="Eliminar" class="btn btn-danger me-2" />
            <a asp-action="Index" class="btn btn-outline-light">Volver a la Lista</a>
        </div>
    </form>
</div>

