@model VentaDeComputadoras.Models.Pago

@{
    ViewData["Title"] = "Eliminar Pago";
}

<div class="container mt-5">
    <h1 class="text-center">Eliminar Pago</h1>

    <h3 class="text-danger text-center">¿Está seguro de que desea eliminar este pago?</h3>

    <div class="row justify-content-center">
        <div class="col-md-8">
            <h4>Detalles del Pago</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.metodosPago)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.metodosPago)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.fechaPago)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.fechaPago)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.estadoPago)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.estadoPago)
                </dd>
                <dt class="col-sm-4">
                    @Html.DisplayNameFor(model => model.pedido)
                </dt>
                <dd class="col-sm-8">
                    @Html.DisplayFor(model => model.pedido.estadoPedido)
                </dd>
            </dl>

            <form asp-action="Delete">
                <input type="hidden" asp-for="idPago" />
                <div class="text-center">
                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>
