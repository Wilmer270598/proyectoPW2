@model VentaDeComputadoras.Models.Pedido

@{
    ViewData["Title"] = "Crear Pedido";
}

<h1 class="text-center my-4">Crear Nuevo Pedido</h1>

<div class="row justify-content-center">
    <div class="col-md-6">
        <div class="card shadow p-4">
            <h4 class="card-title">Detalles del Pedido</h4>
            <hr />
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                <div class="form-group mb-3">
                    <label asp-for="descuento" class="form-label"></label>
                    <input asp-for="descuento" class="form-control" type="number" lang="es" step="0.01" />
                    <span asp-validation-for="descuento" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="estadoPedido" class="form-label"></label>
                    <input asp-for="estadoPedido" class="form-control" />
                    <span asp-validation-for="estadoPedido" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="fechaPedido" class="form-label"></label>
                    <input asp-for="fechaPedido" class="form-control" />
                    <span asp-validation-for="fechaPedido" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="fechaEntrega" class="form-label"></label>
                    <input asp-for="fechaEntrega" class="form-control" />
                    <span asp-validation-for="fechaEntrega" class="text-danger"></span>
                </div>

                <div class="form-group mb-3">
                    <label asp-for="totalPedido" class="form-label"></label>
                    <input asp-for="totalPedido" class="form-control" type="number" lang="es" step="0.01" />
                    <span asp-validation-for="totalPedido" class="text-danger"></span>
                </div>

                <div class="form-group mb-4">
                    <label asp-for="idCliente" class="form-label">Cliente</label>
                    <select asp-for="idCliente" class="form-control" asp-items="ViewBag.idCliente"></select>
                </div>

                <div class="text-center">
                    <input type="submit" value="Crear Pedido" class="btn btn-primary me-2" />
                    <a asp-action="Index" class="btn btn-secondary">Volver a la Lista</a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
   
}
